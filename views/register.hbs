<form class="form-signin" method="post">
    <h2 class="form-signin-heading text-center">New Account</h2>
    <br />
    <input type="name" name="name" class="form-control" placeholder="Name" required="" autofocus="">
    <input type="email" name="email" class="form-control" placeholder="Email" required="" autofocus="">
    <br />
    <input type="password" name="password" class="form-control" placeholder="password" required="">
    <br />
    <input type="password" name="confirmPassword" class="form-control" placeholder="confirmPassword" required="">
    <br />
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up</button>

</form>